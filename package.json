{
	"name": "verify-biz-fn",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "eslint",
		"verify": "npm run verify:rules && npm run verify:bpmn && npm run verify:dmn",
		"verify:fast": "npm run verify:rules",
		"verify:rules": "node scripts/check-change-packages.mjs && node scripts/check-glossary-refs.mjs && node scripts/check-glossary-naked.mjs && node scripts/check-contextmap-imports.mjs",
